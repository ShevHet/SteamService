{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=steamaggregator;Username=postgres;Password=postgres;Include Error Detail=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    }
  },
  "AllowedHosts": "*",
  "Steam": {
    "BaseUrl": "https://store.steampowered.com",
    "RequestDelayMs": 1000,
    "MaxRequestsPerSecond": 1,
    "Polly": {
      "RetryCount": 3,
      "CircuitBreakerFailures": 5,
      "CircuitBreakerDurationSec": 30
    }
  }
}
